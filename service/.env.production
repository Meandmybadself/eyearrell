# Production environment variables for service
# This file should be copied to .env on the DigitalOcean server
# Fill in the actual values for your production environment

DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/irl_production"
CLIENT_URL="https://eyearrell.com"
SESSION_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET"
SERVICE_PUBLIC_URL="https://api.eyearrell.com"
NODE_ENV=production
SERVICE_PORT=3001
EMAIL_VERIFICATION_ENABLED=true

# AWS SES SMTP configuration
AWS_SES_SMTP_HOST=email-smtp.us-east-2.amazonaws.com
AWS_SES_SMTP_PORT=587
AWS_SES_SMTP_USER=YOUR_SMTP_USERNAME
AWS_SES_SMTP_PASS=YOUR_SMTP_PASSWORD
AWS_SES_FROM_EMAIL=YOUR_FROM_EMAIL
AWS_SES_FROM_NAME=IRL

# Cloudinary configuration
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_SECRET
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
